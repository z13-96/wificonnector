# Configuration de la base de données
DATABASE_URL="postgresql://username:password@localhost:5432/wifizone"

# Configuration JWT
JWT_SECRET="votre-secret-jwt-super-securise-ici"
JWT_EXPIRES_IN="7d"

# Configuration du serveur
NODE_ENV="development"
PORT=5000
FRONTEND_URL="http://localhost:3000"

# Configuration des emails
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="votre-email@gmail.com"
SMTP_PASS="votre-mot-de-passe-app"
EMAIL_FROM="noreply@wifizone.com"

# Configuration Mobile Money APIs
MTN_API_KEY="votre-clé-api-mtn"
MTN_API_SECRET="votre-secret-mtn"
MTN_ENVIRONMENT="sandbox" # ou "production"

MOOV_API_KEY="votre-clé-api-moov"
MOOV_API_SECRET="votre-secret-moov"
MOOV_ENVIRONMENT="sandbox" # ou "production"

ORANGE_API_KEY="votre-clé-api-orange"
ORANGE_API_SECRET="votre-secret-orange"
ORANGE_ENVIRONMENT="sandbox" # ou "production"

# Configuration WhatsApp Business API
WHATSAPP_API_KEY="votre-clé-api-whatsapp"
WHATSAPP_PHONE_NUMBER_ID="votre-phone-number-id"
WHATSAPP_ACCESS_TOKEN="votre-access-token"

# Configuration des logs
LOG_LEVEL="info" # debug, info, warn, error

# Configuration de sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Configuration des commissions
DEFAULT_COMMISSION_RATE=0.05 # 5%
MIN_WITHDRAWAL_AMOUNT=1000 # en centimes
MAX_WITHDRAWAL_AMOUNT=1000000 # en centimes

# Configuration des tickets
TICKET_CODE_LENGTH=8
TICKET_EXPIRY_HOURS=24

# Configuration des notifications
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_WHATSAPP_NOTIFICATIONS=true

# Configuration du stockage
UPLOAD_MAX_SIZE=5242880 # 5MB
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf"

# Configuration Redis (optionnel pour les sessions)
REDIS_URL="redis://localhost:6379"

# Configuration des webhooks
WEBHOOK_SECRET="votre-secret-webhook"
PAYMENT_WEBHOOK_URL="https://votre-domaine.com/api/webhooks/payment" 